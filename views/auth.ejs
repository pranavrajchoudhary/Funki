<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Login/Register|FUNKI</title>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;700&display=swap" rel="stylesheet"/>
  <link rel="stylesheet" href="/auth.css">

</head>
<body>
  <div class="heading">
    <h1>FUNKI.com</h1>
  </div>
  <div class="scene">
    <div class="card" id="card">
      <!-- Login Form -->
      <div class="card-face front">
        <h2>Login</h2>
        <form action="/funki/login" method="POST">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" required placeholder="Enter you registered email">

          <label for="password">Password</label>
          <input type="password" id="password" name="password" required placeholder="Enter your password">

          <button type="submit">Login</button>
        </form>
        <% if (msg) { %>
          <div class="login-error"><%- msg %></div>
        <% } %>
        
        <button class="toggle-btn" onclick="flipCard()">Don't have an account? Register</button>
      </div>

      <!-- Register Form -->
      <div class="card-face back">
        <h2>Register</h2>
        <form action="/funki/register" method="POST">
          <label for="name">Name</label>
          <input type="text" id="name" name="name" required placeholder="Enter your name">

          <label for="email2">Email</label>
          <input type="email" id="email2" name="email" required placeholder="Enter your email">
          <label for="phone">Phone Number</label>
          <input type="tel" id="phone" name="phone" placeholder="Enter your phone number" required pattern="\d{10}">

          <label for="password2">Password</label>
          <input type="password" id="password2" name="password" required>

          <button type="submit">Register</button>
        </form>
        <button class="toggle-btn" onclick="flipCard()">Already have an account? Login</button>
      </div>
    </div>
  </div>
   
  <script>
    const card = document.getElementById('card');
    function flipCard() {
      card.classList.toggle('is-flipped');
    }
  </script>

</body>
</html>
