<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Your Cart</title>
  <style>
    /* ... [all your existing styles remain unchanged] ... */
     body {
      margin: 0;
      font-family: 'Segoe UI', sans-serif;
      background-color: #111;
      color: #f0f0f0;
    }

    .cart-container {
      max-width: 1000px;
      margin: 2rem auto;
      padding: 1rem;
    }

    h1 {
      text-align: center;
      font-size: 2.5rem;
      color: #0ff6f6;
      margin-bottom: 2rem;
    }

    .empty-cart {
      text-align: center;
      font-size: 1.2rem;
      color: #aaa;
    }

    .cart-card {
      display: flex;
      align-items: center;
      background: #1a1a1a;
      border-radius: 12px;
      margin-bottom: 1.5rem;
      padding: 1rem;
      box-shadow: 0 0 8px rgba(0, 255, 255, 0.1);
      transition: transform 0.3s ease;
    }

    .cart-card:hover {
      transform: scale(1.02);
      box-shadow: 0 0 12px rgba(0, 255, 255, 0.3);
    }

    .cart-img {
      width: 150px;
      height: auto;
      border-radius: 8px;
      border: 2px solid #0ff6f6;
      margin-right: 1.5rem;
    }

    .cart-details {
      flex: 1;
    }

    .cart-details h2 {
      margin: 0;
      font-size: 1.6rem;
      color: #0ff6f6;
    }

    .cart-id,
    .cart-price {
      margin: 0.3rem 0;
      color: #ccc;
    }

    .availability {
      margin-top: 0.5rem;
      font-weight: bold;
    }

    .available {
      color: #00ff5e;
    }

    .not-available {
      color: #ff5050;
    }

    .btn-group {
      margin-top: 0.7rem;
    }

    .btn {
      padding: 0.6rem 1.2rem;
      font-size: 1rem;
      border: none;
      border-radius: 8px;
      margin-right: 1rem;
      cursor: pointer;
      transition: background 0.3s ease, transform 0.2s ease;
    }

    .checkout-btn {
      background: #00ffd1;
      color: #000;
    }

    .checkout-btn:hover {
      background: #00d6b8;
      transform: scale(1.05);
    }

    .disabled-btn {
      background: #444;
      color: #ccc;
      cursor: not-allowed;
    }
    .remove-btn {
      background: #ff6666;
      color: #fff;
    }

    .remove-btn:hover {
      background: #ff3333;
      transform: scale(1.05);
    }
  </style>
  <link rel="stylesheet" href="/">
</head>

<body>
<%- include('partials/navbar.ejs') %>

<main class="cart-container">
  <h1>Your Cart</h1>

  <% if (cartItems.length === 0) { %>
    <p class="empty-cart">Your cart is empty.</p>
  <% } %>

  <% for (let item of cartItems) { %>
    <div class="cart-card">
      <img src="<%= item.img %>" alt="<%= item.title %>" class="cart-img">
      <div class="cart-details">
        <h2><%= item.title %></h2>
        <p class="cart-price">â‚¹ <%= item.amt %></p>
        <p>Quantity: <%= item.quantity %></p>

        <p class="availability">
          <% if (item.isAvailable) { %>
            <span class="available">In Stock</span>
          <% } else { %>
            <span class="not-available">Out of Stock</span>
          <% } %>
        </p>

        <div class="btn-group">
          <!-- Remove Button -->
          <form action="/funki/cart/remove/<%= item.id %>" method="POST" style="display: inline;">
            <button type="submit" class="btn remove-btn">Remove</button>
          </form>

          <!-- Checkout Button -->
          <% if (item.isAvailable) { %>
            <form action="/checkout" method="POST" style="display: inline;">
              <input type="hidden" name="product_id" value="<%= item.id %>">
              <input type="hidden" name="quantity" value="<%= item.quantity %>">
              <input type="hidden" name="amount" value="<%= item.amt %>">
              <button type="submit" class="btn checkout-btn">Checkout</button>
            </form>
          <% } else { %>
            <button class="btn disabled-btn" disabled>Out of Stock</button>
          <% } %>
        </div>
      </div>
    </div>
  <% } %>
</main>

<%- include('partials/footer') %>
</body>
</html>
